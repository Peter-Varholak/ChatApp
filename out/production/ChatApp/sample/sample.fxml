<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Connection">
            <items>
              <MenuItem id="menu1" mnemonicParsing="false" text="Host" />
                  <MenuItem id="menu2" mnemonicParsing="false" text="Connect" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label id="status" text="Status">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <TextArea id="chatArea" editable="false" styleClass="sharpEdge" stylesheets="@Styles/Stylesheets.css" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="3.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextArea>
            <HBox spacing="10.0">
               <children>
                  <TextField id="chatInput" styleClass="sharpEdge" stylesheets="@Styles/Stylesheets.css" HBox.hgrow="ALWAYS" />
                  <Button id="sendButton" fx:id="sendButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="Send" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
